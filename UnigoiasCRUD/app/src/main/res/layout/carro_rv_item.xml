<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:id="@+id/idLLCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <!--text view para o nome do curso-->
        <TextView
            android:id="@+id/idTVMarcaCarro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Marca do Carro"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <!--text view para a duração do curso-->
        <TextView
            android:id="@+id/idTVModeloCarro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Modelo Carro"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <!--text view para a descrição do curso-->
        <TextView
            android:id="@+id/idTVPlacaCarro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Placa do Carro"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>